[user]
    name = Kurt Wolf
    email = itguy614@gmail.com
[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    dump = cat-file -p
    g = grep -I
    lg = log -p
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    pb = publish-branch
    pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
    rb = rbranch
    rc = rank-contributors
    rv = review
    sm = show-merges
    st = status
    type = cat-file -t
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    log = true
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[push]
	default = simple
